{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">User</th>
                    <th scope="col">Total</th>
                </tr>
                </thead>
                <tbody>
                {% for total in totals %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ total.email }}</td>
                        <td>{{ total.total/100 }} $</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

