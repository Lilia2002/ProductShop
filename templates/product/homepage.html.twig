{% extends 'base.html.twig' %}
{% block body %}

    <style>

    </style>

    <div class="container-fluid">
        <div class="row">
            <div class="main-banner">
                <h1 class="display-1">DEVICE SHOP</h1>

                <div class="container">
                    <div class="row align-self-end">
                        {% for product in products %}
                            <div class="col-sm">
                                {% if ('http' in product.img) == false %}
                                    <img src="{{ '/uploads/product/' ~ product.img }}" alt="..." height="230px" width="150px" class="shadow-sm">
                                {% else %}
                                    <img src="{{ product.img }}" alt="..." height="230px" width="200px" class="shadow-sm">
                                {% endif %}
                                <div class="text">
                                    <h2 class="display-8">{{ product.name }}</h2>
                                    <h2 class="display-8">{{ product.price/100 }} $</h2>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <h3 class="display-3">СКИДКА 20% НА ВСЮ ТЕХНИКУ APPLE</h3>
            </div>
        </div>
    </div>
{% endblock %}