{% extends 'base.html.twig' %}
{% block body %}

    <style>
        img{
            width: 100%;
            max-height: 300px;
        }
        .main-banner {
            min-height: 300px;
            width: 100%;
            text-align: center;
            background-image:
                    linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                    url("https://i.applemix.ru/2019/01/xr.png");
            background-repeat: no-repeat;
            background-size: 100% 600px;
            background-position: top;
        }
        .main-banner h1 {
            margin-top: 200px;
            color: #ffffff;
            padding-bottom: 100px;
        }
        .text {
            color: #474752;
            /*background-color: rgba(200, 165, 252, 0.3);*/
        }
        .main-banner h3 {
            margin-top: 50px;
            color: #ffffff;
            background: #262626; /* Цвет фона */
            /*padding-bottom: 50px;*/
            border: 2px solid black;
        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <div class="main-banner">
                <h1 class="display-1">DEVICE SHOP</h1>

                <div class="container">
                    <div class="row align-self-end">
                        {% for product in products %}
                            <div class="col-sm">
                                {% if ('http' in product.img) == false %}
                                    <img src="{{ '/uploads/product/' ~ product.img }}" alt="..." height="230px" width="150px" class="shadow-sm">
                                {% else %}
                                    <img src="{{ product.img }}" alt="..." height="230px" width="200px" class="shadow-sm">
                                {% endif %}
                                <div class="text">
                                    <h2 class="display-8">{{ product.name }}</h2>
                                    <h2 class="display-8">{{ product.price/100 }} $</h2>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <h3 class="display-3">СКИДКА 20% НА ВСЮ ТЕХНИКУ APPLE</h3>
            </div>
        </div>
    </div>
{% endblock %}