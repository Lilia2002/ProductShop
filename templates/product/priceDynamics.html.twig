{% extends 'base.html.twig' %}
{% block body %}
    <style>
        th {
            height: 30%;
        }
        td.actions {
            text-align: right;
        }
        td.actions a{
            margin: 2px;
        }
        p.hidden-text {
            height: 75px;
            overflow: hidden;
        }
        body {
            color:#000066
        }
        .container-ph {
            margin-right: 200px;
            margin-left: 200px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .title-item-name {
            color: #151413;
            display: flex;
            flex-direction: row;
            align-items: center;
        }
        .title-item-price {
            color: #c72323;
            display: flex;
            flex-direction: row;
            align-items: center;
        }
    </style>
    <div class="container-ph">
        <div class="title-item-name">
            Название продукта -
            <h3>
                {{ priceHistory[0].product.name }}
            </h3>
        </div>
        <div class="title-item-price">
            Текущая цена продукта -
            <h3>
                {{ priceHistory[0].product.price/100 }} $
            </h3>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th scope="col" >#</th>
                <th scope="col"><a href="" class="btn btn-light">id</a></th>
                <th scope="col"><a href="" class="btn btn-light">PriceDate</a></th>
                <th scope="col"><a href="" class="btn btn-light">Price</a></th>
            </tr>
            </thead>
            <tbody>
            {% for price in priceHistory %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td><p class="hidden-text">{{ price.id }}</p></td>
                    <td><p class="hidden-text">{{ price.priceDate|date()}}</p></td>
                    {% if averagePrice == price.price %}
                    <td><p class="text-warning">{{ price.price/100 }} $</p></td>
                    {% endif %}
                    {% if averagePrice > price.price %}
                        <td><p class="text-success">{{ price.price/100 }} $</p></td>
                    {% endif %}
                    {% if averagePrice < price.price %}
                        <td><p class="text-danger">{{ price.price/100 }} $</p></td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}